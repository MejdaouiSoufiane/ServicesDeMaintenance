<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="match_parent">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AddDemande"
        android:orientation="vertical"
        android:background="#fff"
        android:padding="20dp">


        <TextView
            android:id="@+id/demande"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="40dp"
            android:fontFamily="@font/banger"
            android:gravity="center_horizontal"
            android:text="Nouvelle Demande"
            android:textColor="#000"
            android:textSize="25dp"
            android:transitionName="logo_text" />
        <View
            android:id="@+id/viewi"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/demande"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/infoi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations Sur la Demande"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@+id/viewi"
            android:layout_marginTop="10dp" />
        <View
            android:id="@+id/view2i"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/infoi"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/text_titre"
            android:layout_below="@+id/view2i"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titre"
            />
        <EditText
            android:id="@+id/titre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_titre"
            android:layout_marginTop="15dp"
            android:hint="Titre"
            />
        <TextView
            android:id="@+id/text_description"
            android:layout_below="@+id/titre"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Description"
            />
        <EditText
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_description"
            android:layout_marginTop="15dp"
            android:hint="Description"
            />
        <TextView
            android:id="@+id/text_service"
            android:layout_below="@+id/description"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Service"
            />
        <Spinner
            android:id="@+id/spinner_service"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_service"
            android:layout_marginTop="0dp"
            android:hint="Service"
            />
        <TextView
            android:id="@+id/text_calendar"
            android:layout_below="@+id/spinner_service"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de disponibilité"
            />

        <TextView
            android:id="@+id/text_calendar_de"
            android:layout_below="@+id/spinner_service"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Date de disponibilité"
            />
        <TextView
            android:id="@+id/disponibilite"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_calendar"
            android:layout_marginTop="0dp"
            android:gravity="center"
            android:text="Entrez une date"
            android:hint="Date de Disponibilité"
            />
        <TextView
            android:id="@+id/text_heure"
            android:layout_below="@+id/disponibilite"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Heure de disponibilité"
            />
        <TextView
            android:id="@+id/heure"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_heure"
            android:layout_marginTop="0dp"
            android:text="Entrez une heure"
            android:inputType="time"
            android:gravity="center"
            />
        <TextView
            android:id="@+id/text_img"
            android:layout_below="@+id/heure"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"

            android:text="Prendre une photo"
            />


        <ImageView
            android:id="@+id/new_image"
            android:layout_width="100dp"
            android:layout_height="101dp"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_below="@+id/text_img"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.163"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.213"
            app:srcCompat="@mipmap/ic_launcher" />

        <Button
            android:id="@+id/button_img"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:layout_below="@+id/text_img"
            android:layout_marginStart="78dp"
            android:layout_marginLeft="78dp"
            android:layout_marginTop="41dp"
            android:layout_toEndOf="@+id/new_image"
            android:layout_toRightOf="@+id/new_image"
            android:background="@color/startBleu"

            android:text=" Prendre une photo "
            android:textColor="#000"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.54"
            app:layout_constraintStart_toEndOf="@+id/new_image"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/text_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_img"
            android:layout_marginTop="50dp"
            android:text="Localisation" />

        <TextView
            android:id="@+id/text_localisation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/button_img"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="50dp"
            android:layout_marginEnd="15dp"
            android:layout_toEndOf="@+id/text_map"
            android:gravity="center"
            android:text="_________" />

        <Button
            android:id="@+id/button_map"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/text_map"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/startBleu"
            android:onClick="btn_map"
            android:text="Localisation"
            android:textColor="#000" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/button_map"
            android:layout_marginTop="25dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Informations Supplementaires"
            android:textSize="20dp"
            android:gravity="center"
            android:layout_below="@+id/view"
            android:layout_marginTop="10dp" />
        <View
            android:id="@+id/view2"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_below="@+id/info"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#000000" />
        <TextView
            android:id="@+id/text_age"
            android:layout_below="@+id/view2"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Age"
            />
        <Spinner
            android:id="@+id/spinner_age"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_age"
            android:layout_marginTop="20dp"

            />
        <TextView
            android:id="@+id/text_genre"
            android:layout_below="@+id/spinner_age"
            android:layout_marginTop="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Genre"
            />
        <Spinner
            android:id="@+id/spinner_genre"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/text_genre"
            android:layout_marginTop="0dp"
            android:hint="Genre"
            />


        <Button
            android:id="@+id/button_ajouter"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spinner_genre"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="20dp"
            android:background="@color/startBleu"
            android:onClick="btn_ajouter"
            android:text="Ajouter"
            android:textColor="#000" />




    </RelativeLayout>
</ScrollView>